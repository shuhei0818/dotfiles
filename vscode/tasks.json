{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "${file}"
            ],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            }
        },
        {
            "label": "go test",
            "type": "shell",
            "command": "gotest-vscode",
            "args": [
                "-l",
                "${lineNumber}",
                "${file}"
            ],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            }
        },
        {
            "label": "go bench",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-bench",
                ".",
                "-benchmem",
                "${file}"
            ],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
            }
        }
    ]
}
